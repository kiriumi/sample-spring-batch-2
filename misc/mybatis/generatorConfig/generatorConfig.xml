<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >

<generatorConfiguration>

	<properties
		url="file:///C:/Users/Kengo/git/sample-spring-batch-2/src/main/resources/batch.properties" />


	<context id="context_db1">
		<jdbcConnection driverClass="${batch.jdbc.driver}"
			connectionURL="${batch.jdbc.url}" userId="${batch.jdbc.user}"
			password="${batch.jdbc.password}" />

		<javaModelGenerator targetPackage="sample.spring.batch.db.generator.dto"
			targetProject="sample-spring-batch-2/src/main/java" />

		<sqlMapGenerator targetPackage="sample.spring.batch.db.generator.sql"
			targetProject="sample-spring-batch-2/src/main/java" />

		<javaClientGenerator targetPackage="sample.spring.batch.db.generator.dao"
			targetProject="sample-spring-batch-2/src/main/java" type="XMLMAPPER" />

		<table schema="public" tableName="db1" />
	</context>

	<context id="context_db2">
		<jdbcConnection driverClass="org.postgresql.Driver"
			connectionURL="jdbc:postgresql://localhost:5432/spring_batch_db"
			userId="springrole" password="springrole" />

		<javaModelGenerator targetPackage="sample.spring.batch.db.generator.dto"
			targetProject="sample-spring-batch-2/src/main/java" />

		<sqlMapGenerator targetPackage="sample.spring.batch.db.generator.sql"
			targetProject="sample-spring-batch-2/src/main/java" />

		<javaClientGenerator targetPackage="sample.spring.batch.db.generator.dao"
			targetProject="sample-spring-batch-2/src/main/java" type="XMLMAPPER" />

		<table schema="public" tableName="db2" />
	</context>

</generatorConfiguration>